FROM apache/superset:latest

USER root

# OS tools
RUN apt-get update && \
    apt-get install -y gcc g++ libpq-dev python3-dev build-essential postgresql-client && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Make sure pip installs into Supersetâ€™s runtime environment
ENV PYTHONPATH="/app/pythonpath:/app/pythonpath/lib/python3.10/site-packages"

# Install PostgreSQL-related Python drivers INTO Superset's env
RUN pip install --no-cache-dir "apache-superset[postgres]" && \
    pip install --no-cache-dir psycopg2-binary --target=/app/pythonpath/lib/python3.10/site-packages

USER superset
